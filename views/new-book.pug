doctype html
html(lang="en")
head
  title New Book
  link(rel='stylesheet' href='/style.css', type='text/css' )
h1 New Book
form(actio='books/new' method='post')
  if errors
    h2(class="error") Oooops!
    ul(class="error")
      each error in errors
        li= error
  p
    label(for='title') Title
    input#title(name='title' type='text')
  p
    label(for='author') Author
    input#author(name='author' type='text')
  p
    label(for='genre') Genre
    input#genre(name='genre' type='text')
  p
    label(for='year') Year
    input#year(name='year' type='text')
  p
    input.button(type='submit' value='Create New Book') 
  p
    a.button(href='/' ) Cancel
